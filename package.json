{
  "name": "liteslider",
  "version": "1.3.0",
  "description": "A simple slider library.",
  "main": "index.js",
  "scripts": {
    "build": "parcel build ./src/index.js ./src/slider.scss --dist-dir ./dist --target compiled",
    "watch": "parcel watch ./src/index.js ./src/slider.scss --dist-dir ./dist --target compiled",
    "lint-js": "eslint --fix ./index.js ./slider.js ./src/*.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "targets": {
    "compiled": {
      "distDir": "./dist",
      "sourceMap": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikeh74/liteslider.git"
  },
  "author": "mikeh74",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikeh74/liteslider/issues"
  },
  "homepage": "https://github.com/mikeh74/liteslider#readme",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@parcel/transformer-sass": "^2.13.3",
    "@stylistic/eslint-plugin": "^3.1.0",
    "eslint": "^9.20.0",
    "globals": "^15.14.0",
    "parcel": "^2.13.3",
    "sass": "^1.83.4"
  }
}
